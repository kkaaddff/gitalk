{
  "name": "gitalk",
  "version": "0.0.1",
  "description": "A comment plugin",
  "keywords": [
    "comment",
    "plugin",
    "lib",
    "GitHub"
  ],
  "main": "dist/gitalk.js",
  "types": "typings/index.d.ts",
  "scripts": {
    "start": "dumi dev",
    "docs:build": "dumi build",
    "compile": "father build",
    "prettier": "prettier -c --write '**/*'",
    "lint": "eslint src/ --ext .tsx,.ts,.jsx,.js",
    "test": "father test",
    "coverage": "father test --coverage"
  },
  "author": "Qic Zhang",
  "license": "MIT",
  "devDependencies": {
    "@types/autosize": "^4.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "jest": "27.5.1",
    "moxios": "0.4.0",
    "react-test-renderer": "17.0.2",
    "@types/enzyme": "^3.10.11",
    "@types/jest": "^27.4.1",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "@types/warning": "^3.0.0",
    "dumi": "^1.1.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "enzyme-to-json": "^3.6.2",
    "eslint": "^7.0.0",
    "father": "^2.30.17",
    "father-build": "^1.21.2",
    "less": "^4.1.2",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "ahooks": "^3.2.0",
    "autosize": "^3.0.21",
    "axios": "^0.26.1",
    "date-fns": "^2.28.0",
    "github-markdown-css": "^5.1.0",
    "react-flip-move": "^3.0.4"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleNameMapper": {
      "\\.(css|less|scss|styl)$": "<rootDir>/src/__mocks__/style.js",
      "^!!raw-loader": "<rootDir>/src/__mocks__/text.js"
    },
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "coveragePathIgnorePatterns": [
      "src/gitalk.jsx",
      "src/graphql/getComments.js"
    ],
    "globals": {
      "VERSION": "1.0.0-test"
    }
  },
  "standard-version": {
    "releaseCommitMessageFormat": "chore(release): v{{currentTag}} :rocket:",
    "scripts": {
      "prerelease": "npm test",
      "precommit": "npm run-script build > /dev/null && git add ./dist"
    }
  }
}
